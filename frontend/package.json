{
  "version": "1.0.0",
  "source": "./index.html",
  "type": "module",
  "name": "Escola",
  "description": "Escola PI",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint --ext .ts,.tsx src --max-warnings=0",
    "lint:fix": "eslint --ext .ts,.tsx src --fix",
    "check": "npm run lint && tsc --noEmit",
